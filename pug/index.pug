extends layout/layout.pug

block title
  title DECODE

append styles
  //- additional styles
  link(href="./styles/pages/landing.min.css", rel="stylesheet")

block vars
  //- variables
  - var bodyClass = 'landing'
  - var withHeader = 'false'
  - var isLanding = 'true'

block content
  //- page content
  video(class="background-video" id="landing-video" loop autoplay muted)
    source(src="/src/video/video-intro.mp4")
    
  .content-wrapper#content-wrapper-landing
    .logo
      img(src='src/images/logo-decode-white.png')
    
    ul.menu-list#menu-list-landing
      li.menu-element français
      li.menu-element english
      li.menu-element español
      li.menu-element العربي
      li.menu-element 日本の
      
append scripts
  //-additional scripts


